@page
@model WebApplication1.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center align-items-center" style="min-height: 85vh;">
    <div class="col-12 col-md-8 col-lg-5 col-xl-4">

        <div class="card shadow-lg border-0 rounded-4"
             style="background: rgba(255,255,255,.06); border:1px solid rgba(255,255,255,.12);">

            <div class="card-body p-4 p-md-5">

                <!-- Header -->
                <div class="text-center mb-4">
                    <div class="mx-auto mb-3 d-flex align-items-center justify-content-center rounded-4"
                         style="width:60px;height:60px;border:1px solid rgba(255,255,255,.15);background:rgba(255,255,255,.08);">
                        <i class="bi bi-shield-lock fs-2 text-light"></i>
                    </div>
                    <h3 class="fw-semibold text-light mb-1">Welcome Back</h3>
                    <div class="text-white-50 small">
                        Sign in to Legal Case Management System
                    </div>
                </div>

                <!-- Error message -->
                <div asp-validation-summary="ModelOnly"
                     class="alert alert-danger rounded-4 border-0"
                     style="background: rgba(220,53,69,.18); color:#fff;">
                </div>

                <form method="post">

                    <!-- Username / Email -->
                    <div class="mb-3">
                        <label class="form-label text-white-50">Username or Email</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent text-white-50 border-white border-opacity-10">
                                <i class="bi bi-person"></i>
                            </span>
                            <input asp-for="User.Email"
                                   class="form-control bg-transparent text-light border-white border-opacity-10"
                                   placeholder="Enter username or email"
                                   autocomplete="username" />
                        </div>
                        <span asp-validation-for="User.Email" class="text-warning small"></span>
                    </div>

                    <!-- Password -->
                    <div class="mb-3">
                        <label class="form-label text-white-50">Password</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent text-white-50 border-white border-opacity-10">
                                <i class="bi bi-key"></i>
                            </span>
                            <input asp-for="User.Password"
                                   type="password"
                                   id="passwordInput"
                                   class="form-control bg-transparent text-light border-white border-opacity-10"
                                   placeholder="Enter password"
                                   autocomplete="current-password" />
                            <button class="btn btn-outline-light border-white border-opacity-10"
                                    type="button"
                                    onclick="togglePassword()">
                                <i class="bi bi-eye" id="eyeIcon"></i>
                            </button>
                        </div>
                        <span asp-validation-for="User.Password" class="text-warning small"></span>
                    </div>

                    <!-- Remember / Forgot -->
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="rememberMe">
                            <label class="form-check-label text-white-50" for="rememberMe">
                                Remember me
                            </label>
                        </div>
                        <a href="" class="text-light small text-decoration-none">
                            Forgot password?
                        </a>
                    </div>

                    <!-- Login button -->
                    <button type="submit" class="btn btn-light w-100 rounded-4 py-2 fw-semibold">
                        Login <i class="bi bi-arrow-right ms-1"></i>
                    </button>

                    <!-- Register -->
                    <div class="text-center mt-3 text-white-50">
                        Don’t have an account?
                        <a asp-page="/Account/Registration"
                           class="text-light fw-semibold text-decoration-none">
                            Create one
                        </a>
                    </div>
                </form>
            </div>

            <!-- Footer -->
            <div class="px-4 py-3"
                 style="border-top:1px solid rgba(255,255,255,.12); background: rgba(0,0,0,.15);">
                <div class="d-flex justify-content-between text-white-50 small">
                    <span><i class="bi bi-lock me-1"></i>Secure Login</span>
                    <span><i class="bi bi-shield-check me-1"></i>Role Based Access</span>
                </div>
            </div>
        </div>

        <div class="text-center text-white-50 small mt-3">
            © 2026 LCMS • Legal Case Management System
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function togglePassword() {
            const input = document.getElementById('passwordInput');
            const icon = document.getElementById('eyeIcon');
            const isHidden = input.type === 'password';
            input.type = isHidden ? 'text' : 'password';
            icon.className = isHidden ? 'bi bi-eye-slash' : 'bi bi-eye';
        }
    </script>
}
