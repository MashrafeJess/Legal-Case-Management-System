@page
@model WebApplication1.Pages.Account.CasePageModel
@{
    ViewData["Title"] = "Create Case";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-4 text-center">Create Case</h4>

                    <!-- Razor Pages: no asp-action -->
                    <form method="post">

                        <div class="mb-3">
                            <label asp-for="@Model.Cases.CaseName" class="form-label"></label>
                            <input asp-for="@Model.Cases.CaseName" class="form-control" />
                            <span asp-validation-for="@Model.Cases.CaseName" class="text-danger"></span>
                        </div>

                        <!-- LAWYER DROPDOWN -->
                        <div class="mb-3">
    <label asp-for="Cases.CaseHandlingBy" class="form-label"></label>

    <select asp-for="Cases.CaseHandlingBy"
            asp-items="Model.LawyerOptions"
            class="form-select">
        <option value="">-- Select Lawyer --</option>
    </select>

    <span asp-validation-for="Cases.CaseHandlingBy" class="text-danger"></span>
</div>


                        <div class="mb-3">
                            <label asp-for="@Model.Cases.HearingNumber" class="form-label"></label>
                            <input asp-for="@Model.Cases.HearingNumber" class="form-control" />
                            <span asp-validation-for="@Model.Cases.HearingNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            @* <label asp-for="@Model.cases.Price" class="form-label"></label>
                            <input asp-for="@Model.cases.Price" class="form-control" />
                            <span asp-validation-for="@Model.cases.Price" class="text-danger"></span> *@
                        </div>

                        <button type="submit" class="btn btn-primary w-100">
                            Submit
                        </button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
