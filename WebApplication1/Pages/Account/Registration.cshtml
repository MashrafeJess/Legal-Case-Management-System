@page
@model WebApplication1.Pages.Account.RegistrationModel
@{
    ViewData["Title"] = "Create Account";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-9 col-lg-6 col-xl-5">
        <div class="card border-0 shadow-lg rounded-4 overflow-hidden"
             style="background: rgba(255,255,255,.06); border: 1px solid rgba(255,255,255,.12);">
            <div class="p-4 p-md-5">

                <!-- Header -->
                <div class="d-flex align-items-center gap-3 mb-3">
                    <div class="d-grid place-items-center rounded-4"
                         style="width:52px;height:52px;border:1px solid rgba(255,255,255,.14);background:rgba(255,255,255,.08);">
                        <i class="bi bi-shield-lock fs-3 text-light"></i>
                    </div>
                    <div>
                        <h3 class="mb-0 fw-semibold text-light">Create your LCMS account</h3>
                        <div class="text-white-50 small">Secure access for managing legal cases and clients.</div>
                    </div>
                </div>

                <!-- Validation summary -->
                <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-4 border-0"
                     style="background: rgba(220,53,69,.18); color: #fff;"></div>

                <form method="post" class="mt-3">
                    <!-- Full Name -->
                    <div class="mb-3">
                        <label class="form-label text-white-50">Full Name</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent text-white-50 border-white border-opacity-10">
                                <i class="bi bi-person"></i>
                            </span>
                            <input asp-for="user.UserName"
                                   class="form-control bg-transparent text-light border-white border-opacity-10"
                                   placeholder="e.g. Mashrafe Ahmed" />
                        </div>
                        <span asp-validation-for="user.UserName" class="text-warning small"></span>
                    </div>

                    <!-- Email -->
                    <div class="mb-3">
                        <label class="form-label text-white-50">Email</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent text-white-50 border-white border-opacity-10">
                                <i class="bi bi-envelope"></i>
                            </span>
                            <input asp-for="user.Email"
                                   type="email"
                                   class="form-control bg-transparent text-light border-white border-opacity-10"
                                   placeholder="name@example.com" />
                        </div>
                        <span asp-validation-for="user.Email" class="text-warning small"></span>
                    </div>

                   

                    <!-- Password -->
                    <div class="mb-3">
                        <label class="form-label text-white-50">Password</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent text-white-50 border-white border-opacity-10">
                                <i class="bi bi-key"></i>
                            </span>
                            <input asp-for="user.Password"
                                   type="password"
                                   class="form-control bg-transparent text-light border-white border-opacity-10"
                                   placeholder="Create a strong password"
                                   id="passwordInput" />
                            <button class="btn btn-outline-light border-white border-opacity-10"
                                    type="button"
                                    onclick="togglePass()"
                                    title="Show/Hide password">
                                <i class="bi bi-eye" id="eyeIcon"></i>
                            </button>
                        </div>
                        <div class="text-white-50 small mt-2">
                            Use at least 8 characters. Mix letters, numbers, symbols.
                        </div>
                        <span asp-validation-for="user.Password" class="text-warning small"></span>
                    </div>

                    <!-- Role / Account Type (optional placeholder)
                         If you don't have role in User model, remove this section. -->
                    @* 
                    <div class="mb-3">
                        <label class="form-label text-white-50">Account Type</label>
                        <select asp-for="user.Role" class="form-select bg-transparent text-light border-white border-opacity-10">
                            <option value="" selected>Select</option>
                            <option value="3">Client</option>
                            <option value="2">Staff</option>
                            <option value="1">Admin</option>
                        </select>
                        <span asp-validation-for="user.Role" class="text-warning small"></span>
                    </div>
                    *@

                    <!-- Terms -->
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="termsCheck" required>
                        <label class="form-check-label text-white-50" for="termsCheck">
                            I agree to the <a href="" class="text-light">Terms</a> and <a href="" class="text-light">Privacy Policy</a>.
                        </label>
                    </div>

                    <!-- Submit -->
                    <button type="submit" class="btn btn-light w-100 rounded-4 py-2 fw-semibold">
                        Create Account <i class="bi bi-arrow-right ms-1"></i>
                    </button>

                    <div class="text-center mt-3 text-white-50">
                        Already have an account?
                        <a href="" class="text-light fw-semibold text-decoration-none">Sign in</a>
                    </div>
                </form>
            </div>

            <!-- Footer strip -->
            <div class="px-4 py-3"
                 style="border-top:1px solid rgba(255,255,255,.12); background: rgba(0,0,0,.15);">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                    <div class="text-white-50 small">
                        <i class="bi bi-lock me-1"></i>Encrypted password storage
                    </div>
                    <div class="text-white-50 small">
                        <i class="bi bi-shield-check me-1"></i>Role-based access
                    </div>
                </div>
            </div>
        </div>

        <!-- Tiny note -->
        <div class="text-center text-white-50 small mt-3">
            © 2026 LCMS • Secure Case Management
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function togglePass() {
            const input = document.getElementById('passwordInput');
            const icon = document.getElementById('eyeIcon');
            const isPass = input.getAttribute('type') === 'password';
            input.setAttribute('type', isPass ? 'text' : 'password');
            icon.className = isPass ? 'bi bi-eye-slash' : 'bi bi-eye';
        }
    </script>
}
